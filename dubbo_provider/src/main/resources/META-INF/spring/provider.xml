<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
">

    <!-- 定义了服务放应用信息，用于计算依赖关系；在 dubbo-admin 或 dubbo-monitor 会显示这个名字，方便辨识 -->
    <dubbo:application name="demotest-provider" owner="programmer" organization="dubbox"/>
    <!-- 使用 zookeeper 注册中心暴露服务，注意要先开启 zookeeper -->
    <dubbo:registry address="zookeeper://localhost:2181"/>
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880" />
    <!-- 使用 dubbo 协议,实现定义的接口 -->
    <dubbo:service interface="com.tzy777.dubbo.demo.DemoService" ref="demoServiceImpl" protocol="dubbo"/>
    <bean class="com.tzy777.dubbo.demo.impl.DemoServiceImpl" id="demoServiceImpl"/>
</beans>